name: "Secure Pipeline Test - Snyk"
on: ["push","pull_request"]
jobs:
  security_snyk:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@master
      - name: Run Snyk to check for vulnerabilities
        uses: snyk/actions/node@master
        env:
          SNYK_TOKEN: ${{ Secrets.SNYK_TOKEN }}
